/* pages/order/index.wxss */
.jess {
  width: 100%;
  background: #fff;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.order-group{
  background-color: #f2f2f2;
}
.order-item{
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 10px;
  padding: 10px;
  box-sizing: border-box;
}
.order-head{
  font-size: 30rpx;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 8px;
}
.order-body{
  font-size: 40rpx;
  padding: 10px 0;
}
.right{
  float: right;
}
.left{
  font-size: 30rpx;
}
.order-foot{
  height: 20px;
}
.order-foot > view{
  float: right;
  border: 1px solid #f2f2f2;
  font-size: 20rpx;
  padding: 4px 10px;
  margin-left: 4px;
  border-radius: 8px;
}
.order-content{
  font-size: 32rpx;
}