/* pages/comment/index.wxss */
.main{
  margin-bottom: 80px;
  padding: 10px 20px;
}
.comment{
  height: 200px;
}
.comment textarea{
  width: 100%;
  height: 100%;
}
.comment-btn{
  width: 100%;
  height: 200px;
  font-size: 60px;
  text-align: center;
  line-height: 180px;
  border: 1px dashed #000;
  border-left: 0;
  border-right: 0;
  margin-bottom: 10px;
}
.comment-btn-group{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  background-color:#4586f7;
}
.comment-img{
  width: 100%;
  height: 200px;
  border: 1px dashed #000;
  border-left: 0;
  border-right: 0;
}
.detail-box {
  bottom: 80rpx;
}

.detail-pre {
  border-radius: 50rpx;
}
