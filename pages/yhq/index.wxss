page {
  background: rgb(235, 235, 235);
  width: 100%;
  color: #fff;
}

.mian {
  width: 100%;
  padding-bottom: 165rpx;
}

.jess {
  width: 100%;
  color: #000;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.panl-group {
  padding: 14px;
  margin-bottom: 180rpx;
}

.panl {
  margin-bottom: 8px;
  display: flex;
  font-size: 18px;
  border-radius: 4px;
  background-color: #000;
  position: relative;
  padding: 10px 20px;
}

.panl-img {
  width: 60px;
  height: 60px;
}

.panl-text {
  width: calc(100% - 60px);
  font-size: 16px;
  padding-left: 20px;
  box-sizing: border-box;
}

.panl-text > view {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 6px;
  box-sizing: border-box;
  padding-top: 10px;
}

.panl-img image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
